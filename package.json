  "dependencies": {
    "@geist-ui/core": "^2.3.8",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "admin": "^1.4.1",
    "eslint": "8.27.0",
    "eslint-config-next": "13.0.3",
    "firebase": "^9.14.0",
    "husky": "^8.0.2",
    "next": "13.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "reactfire": "^4.2.2",
    "typescript": "4.9.3"
  },
  "devDependencies": {
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^8.0.0",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
